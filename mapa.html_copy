<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PINMAP - Mapa Interativo</title>
    
    <!-- Leaflet CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <!-- MarkerCluster CSS -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.Default.css" />
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            overflow-x: hidden;
        }

        #map {
            height: calc(100vh - 80px);
            width: 100%;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .header {
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            padding: 15px 0;
            position: relative;
            z-index: 1000;
            border-bottom: 1px solid rgba(76, 175, 80, 0.3);
        }

        .header-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(45deg, #4CAF50, #81C784);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
        }

        .stats-bar {
            display: flex;
            gap: 30px;
            align-items: center;
        }

        .stat-item {
            text-align: center;
            padding: 8px 15px;
            background: rgba(76, 175, 80, 0.1);
            border-radius: 15px;
            border: 1px solid rgba(76, 175, 80, 0.3);
            min-width: 80px;
        }

        .stat-value {
            display: block;
            font-size: 1.4rem;
            font-weight: 700;
            color: #4CAF50;
            line-height: 1.2;
        }

        .stat-label {
            display: block;
            font-size: 0.75rem;
            color: #a0a0a0;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .controls {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .btn {
            padding: 10px 20px;
            background: rgba(76, 175, 80, 0.2);
            color: #4CAF50;
            border: 1px solid rgba(76, 175, 80, 0.4);
            border-radius: 20px;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .btn:hover {
            background: rgba(76, 175, 80, 0.3);
            border-color: rgba(76, 175, 80, 0.6);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.2);
        }

        .btn.active {
            background: #4CAF50;
            color: white;
            border-color: #4CAF50;
        }

        .loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 10000;
            backdrop-filter: blur(10px);
        }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(76, 175, 80, 0.3);
            border-top: 4px solid #4CAF50;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .map-info {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 15px;
            border-radius: 10px;
            font-size: 0.85rem;
            z-index: 1000;
            border: 1px solid rgba(76, 175, 80, 0.3);
            backdrop-filter: blur(10px);
            max-width: 300px;
        }

        .legend {
            position: absolute;
            top: 100px;
            right: 20px;
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 15px;
            border-radius: 10px;
            font-size: 0.85rem;
            z-index: 1000;
            border: 1px solid rgba(76, 175, 80, 0.3);
            backdrop-filter: blur(10px);
        }

        .legend h4 {
            margin-bottom: 10px;
            color: #4CAF50;
            font-size: 0.9rem;
        }

        .legend-item {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            font-size: 0.8rem;
        }

        .legend-color {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            margin-right: 10px;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .cluster-small { background: #2196F3; }
        .cluster-medium { background: #FF9800; }
        .cluster-large { background: #F44336; }

        /* Estilos dos clusters customizados */
        .marker-cluster-small {
            background-color: rgba(33, 150, 243, 0.8) !important;
            border: 3px solid rgba(33, 150, 243, 1) !important;
        }

        .marker-cluster-medium {
            background-color: rgba(255, 152, 0, 0.8) !important;
            border: 3px solid rgba(255, 152, 0, 1) !important;
        }

        .marker-cluster-large {
            background-color: rgba(244, 67, 54, 0.8) !important;
            border: 3px solid rgba(244, 67, 54, 1) !important;
        }

        .marker-cluster {
            border-radius: 50% !important;
            color: white !important;
            font-weight: bold !important;
            text-align: center !important;
            font-size: 14px !important;
        }

        .marker-cluster div {
            border-radius: 50% !important;
            color: white !important;
            font-weight: bold !important;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .header-content {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .stats-bar {
                gap: 15px;
                flex-wrap: wrap;
                justify-content: center;
            }

            .controls {
                flex-wrap: wrap;
                justify-content: center;
            }

            .legend, .map-info {
                position: relative;
                margin: 10px;
                max-width: none;
            }

            #map {
                height: calc(100vh - 120px);
            }
        }

        @media (max-width: 480px) {
            .header {
                padding: 10px 0;
            }

            .header h1 {
                font-size: 1.4rem;
            }

            .stat-value {
                font-size: 1.2rem;
            }

            .btn {
                padding: 8px 15px;
                font-size: 0.8rem;
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="header-content">
            <h1>üìç PINMAP - Mapa Interativo</h1>
            
            <div class="stats-bar">
                <div class="stat-item">
                    <span class="stat-value" id="total-usuarios">0</span>
                    <span class="stat-label">Usu√°rios</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="clusters-ativos">0</span>
                    <span class="stat-label">Clusters</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="marcadores-visiveis">0</span>
                    <span class="stat-label">Vis√≠veis</span>
                </div>
            </div>

            <div class="controls">
                <button class="btn active" id="btn-clusters" onclick="alternarClusters()">üîó Clusters</button>
                <a href="index.html" class="btn">üè† In√≠cio</a>
            </div>
        </div>
    </header>

    <div id="loading" class="loading">
        <div class="loading-spinner"></div>
        <div style="font-size: 1.1rem; font-weight: 600; margin-bottom: 10px;">üó∫Ô∏è Carregando Mapa</div>
        <div style="font-size: 0.9rem; color: #a0a0a0;" id="loading-text">Preparando usu√°rios...</div>
    </div>

    <div id="map"></div>

    <div class="legend">
        <h4>üìä Legenda dos Clusters</h4>
        <div class="legend-item">
            <div class="legend-color cluster-small"></div>
            <span>Pequeno (2-20 usu√°rios)</span>
        </div>
        <div class="legend-item">
            <div class="legend-color cluster-medium"></div>
            <span>M√©dio (21-100 usu√°rios)</span>
        </div>
        <div class="legend-item">
            <div class="legend-color cluster-large"></div>
            <span>Grande (100+ usu√°rios)</span>
        </div>
    </div>

    <div class="map-info">
        <h4 style="color: #4CAF50; margin-bottom: 10px;">‚ÑπÔ∏è Informa√ß√µes</h4>
        <p><strong>üéØ Clique nos clusters</strong> para expandir</p>
        <p><strong>üîç Zoom</strong> para ver detalhes</p>
        <p><strong>üìç Marcadores</strong> mostram usu√°rios individuais</p>
        <p><strong>üìä Dados</strong> atualizados em tempo real</p>
    </div>

    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <!-- MarkerCluster JS -->
    <script src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/Leaflet.markercluster.js"></script>
    
    <!-- Dados dos usu√°rios -->
    <script src="dados.js"></script>

    <script>
        let map;
        let markersGroup;
        let clustersAtivados = true;

        // Inicializar mapa
        function inicializarMapa() {
            // Criar mapa centrado no Brasil (regi√£o de Campinas)
            map = L.map('map').setView([-22.9068, -47.0608], 10);

            // Adicionar camada do mapa
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '¬© OpenStreetMap contributors | PINMAP Sistema de Geolocaliza√ß√£o',
                maxZoom: 18
            }).addTo(map);

            // Aguardar dados serem carregados
            if (typeof usuarios !== 'undefined' && usuarios.length > 0) {
                adicionarMarcadores();
            } else {
                // Aguardar evento de dados carregados
                window.addEventListener('dadosCarregados', function(event) {
                    console.log(`üéØ Dados recebidos: ${event.detail.length} usu√°rios`);
                    adicionarMarcadores();
                });
            }

            // Ocultar loading ap√≥s inicializa√ß√£o
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
            }, 1500);
        }

        // Adicionar marcadores dos usu√°rios
        function adicionarMarcadores() {
            console.log(`üó∫Ô∏è Adicionando ${usuarios.length} marcadores ao mapa`);
            
            // Atualizar texto de loading
            document.getElementById('loading-text').textContent = `Carregando ${usuarios.length} usu√°rios...`;
            
            // Criar grupo de marcadores com clustering
            markersGroup = L.markerClusterGroup({
                chunkedLoading: true,
                chunkInterval: 200,
                chunkDelay: 50,
                maxClusterRadius: 50,
                disableClusteringAtZoom: 15,
                spiderfyOnMaxZoom: true,
                showCoverageOnHover: false,
                zoomToBoundsOnClick: true,
                iconCreateFunction: function(cluster) {
                    const count = cluster.getChildCount();
                    let className = 'marker-cluster-small';
                    
                    if (count > 100) {
                        className = 'marker-cluster-large';
                    } else if (count > 20) {
                        className = 'marker-cluster-medium';
                    }
                    
                    return L.divIcon({
                        html: '<div><span>' + count + '</span></div>',
                        className: 'marker-cluster ' + className,
                        iconSize: L.point(40, 40)
                    });
                }
            });

            // Adicionar todos os marcadores
            usuarios.forEach((usuario, index) => {
                const marker = L.marker([usuario.latitude, usuario.longitude])
                    .bindPopup(`
                        <div style="color: #333; min-width: 220px; font-family: Arial, sans-serif;">
                            <div style="background: #4CAF50; color: white; padding: 10px; margin: -10px -10px 10px -10px; border-radius: 5px 5px 0 0;">
                                <h4 style="margin: 0; font-size: 1.1rem;">${usuario.nome}</h4>
                            </div>
                            <div style="padding: 5px 0;">
                                <p style="margin: 5px 0;"><strong>üìç Localiza√ß√£o:</strong> ${usuario.cidade}/${usuario.estado}</p>
                                <p style="margin: 5px 0;"><strong>üìÆ CEP:</strong> ${usuario.cep}</p>
                                <p style="margin: 5px 0;"><strong>üåê Coordenadas:</strong> ${usuario.latitude.toFixed(4)}, ${usuario.longitude.toFixed(4)}</p>
                                <p style="margin: 5px 0;"><strong>üÜî ID:</strong> ${usuario.id}</p>
                            </div>
                            <div style="background: #f5f5f5; padding: 8px; margin: 10px -10px -10px -10px; border-radius: 0 0 5px 5px; text-align: center; font-size: 0.8rem; color: #666;">
                                Usu√°rio ${index + 1} de ${usuarios.length}
                            </div>
                        </div>
                    `);
                
                markersGroup.addLayer(marker);
            });

            // Adicionar grupo ao mapa
            map.addLayer(markersGroup);

            // Atualizar estat√≠sticas
            atualizarEstatisticas();
            
            console.log(`‚úÖ ${usuarios.length} marcadores adicionados com sucesso!`);
        }

        // Alternar entre clusters e marcadores individuais
        function alternarClusters() {
            const btn = document.getElementById('btn-clusters');
            
            if (clustersAtivados) {
                map.removeLayer(markersGroup);
                
                // Adicionar marcadores individuais
                usuarios.forEach(usuario => {
                    L.marker([usuario.latitude, usuario.longitude])
                        .bindPopup(`
                            <div style="color: #333; min-width: 200px;">
                                <h4 style="margin-bottom: 10px; color: #2c3e50;">${usuario.nome}</h4>
                                <p><strong>Cidade:</strong> ${usuario.cidade}/${usuario.estado}</p>
                                <p><strong>CEP:</strong> ${usuario.cep}</p>
                                <p><strong>Coordenadas:</strong> ${usuario.latitude.toFixed(4)}, ${usuario.longitude.toFixed(4)}</p>
                            </div>
                        `)
                        .addTo(map);
                });
                
                btn.textContent = 'üîó Ativar Clusters';
                btn.classList.remove('active');
                clustersAtivados = false;
                
                document.getElementById('clusters-ativos').textContent = '0';
                document.getElementById('marcadores-visiveis').textContent = usuarios.length;
                
            } else {
                // Remover marcadores individuais
                map.eachLayer(layer => {
                    if (layer instanceof L.Marker && layer !== markersGroup) {
                        map.removeLayer(layer);
                    }
                });
                
                // Reativar clusters
                map.addLayer(markersGroup);
                
                btn.textContent = 'üìç Marcadores';
                btn.classList.add('active');
                clustersAtivados = true;
                
                atualizarEstatisticas();
            }
        }

        // Atualizar estat√≠sticas do mapa
        function atualizarEstatisticas() {
            document.getElementById('total-usuarios').textContent = usuarios.length;
            
            if (clustersAtivados && markersGroup) {
                const clusters = markersGroup.getLayers().filter(layer => 
                    layer instanceof L.MarkerCluster || 
                    (layer._group && layer._group._cluster)
                );
                document.getElementById('clusters-ativos').textContent = clusters.length;
                document.getElementById('marcadores-visiveis').textContent = usuarios.length;
            }
        }

        // Inicializar quando a p√°gina carregar
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üéØ Inicializando PINMAP...');
            inicializarMapa();
        });

        // Atualizar estat√≠sticas quando dados forem carregados
        window.addEventListener('dadosCarregados', function(event) {
            console.log(`üìä Atualizando interface com ${event.detail.length} usu√°rios`);
            atualizarEstatisticas();
        });
    </script>
</body>
</html>

